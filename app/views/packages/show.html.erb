  <p style="margin-top: 5%" class="show">
    <strong>Package name:</strong>
    <%= @package.name %>
    <br>
    <% if @package.DVR %>
      <p>Support DVR service</p>
    <% else %>
      <p>Does not support DVR service</p>
    <% end %>
    <ul><li>Package cost: $<%= @package.cost %></li></ul>
    <ul><li>Include channels: </li></ul>
      <% if @package_channels != nil %>
        <ul>
          <% @package_channels.each do |channel| %>
            &diams; <%= channel.name %> &nbsp;
          <% end %>
        </ul>
      <% end %>
      
    <ul><li>Available devices: </li></ul>
     <% if @package_devices != nil %>
        <ul>
          <% @package_devices.each do |device| %>
            &diams; <%= device.name %> &nbsp;
          <% end %>
        </ul>
      <% end %>
    <ul><li>Available set top boxes: </li></ul>
     <% if @package_boxes != nil %>
        <ul>
          <% @package_boxes.each do |box| %>
           &diams;  <%= box.name %> &nbsp;
          <% end %>
        </ul>
      <% end %>
  </p>

<%= link_to 'Edit', edit_package_path(@package) %> |
<%= link_to 'Add New Package', new_package_path %> |
<%= link_to 'Add New Hierarchical Package', hierarchical_new_path %> |
<%= link_to 'Back', packages_path %>
<%= debug params %>
