<h1 class="title">Devices</h1>
<div style="margin-bottom: 20px">
  <%= link_to 'New Device', new_device_path %>
</div>
<table width=100%>
  <thead>
    <tr class="show-list">
      <th>Name</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @devices.each do |device| %>
      <tr class="show-list">
        <td width=40%><%= device.name %></td>
        <td width=20%><%= link_to 'Show', device %></td>
        <td width=20%><%= link_to 'Edit', edit_device_path(device) %></td>
        <td width=20%><%= link_to 'Destroy', device, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
<br>
<%= will_paginate %>
