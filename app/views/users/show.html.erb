<div class="profile">
  <% provide(:title, "Dear #{@user.first_name}") %>
  <h1>
    Welcome, 
    <%= @user.first_name %>
    <%= @user.last_name %>
  </h1>
  </br>
  <p class="show">
    <strong>Email:</strong>
   <%= @user.email %>
  </p>
  <div class="users">
  <%= link_to 'Edit your profile', edit_user_path(@user) %> | 
  <%= link_to 'Change your password', '#' %>
  </div>
  <p class="show">
    <strong>Antenna:</strong><br>
    <%= render 'form_antenna' %>
  </p>
  <div class="users">
  <%= link_to 'Edit antenna channel', antenna_path(@user.id) %> 
  </div>
  <p class="show">
    <strong>Device:</strong><br>
    <%= render 'form_device' %>
  </p>
  <div class="users">
  <%= link_to 'Edit your devices', own_device_path(@user.id) %> 
  </div>
  <p class="show">
    <strong>Set top box:</strong><br>
   <%= render 'form_box' %>
  </p>
  <div class="users">
  <%= link_to 'Edit your set top boxes', own_box_path(@user.id) %> 
  </div>
</div>
