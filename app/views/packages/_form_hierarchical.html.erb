    <%= form_for(@package) do |f| %>
      <%= render 'shared/error_messages', obj: @package %>

      <%= f.label :name %>
      <%= f.text_field :name, placeholder: 'Enter package name', autofocus: true, class: 'form-control'%>
      <%= f.label :cost %>
      <%= f.text_field :cost, placeholder: 'Enter package cost', class: 'form-control'%>
      <%= f.label :link %>
      <%= f.text_field :link, placeholder: 'Enter package link', class: 'form-control'%>
      <p>
        DVR
        <%= f.check_box :DVR, checked_value: true, unchecked_vale: false, style: "width: 50px; float: left", class: "checkbox inline"%>
      </p>

      <!--Form for channels-->
      <% if @channels == nil %>
        <span>Ops, no channel yet, please contact admin.</span>
        <br></br>
      <% else %>
      <div style="margin-bottom: 20px">
          <h4>Channels</h4>
          <% @channels.each do |channel| %>  
            <p>
            <td>
              <% if @package_channels != nil && @package_channels.include?(channel) %>
                <%= check_box_tag "channels[]", channel.id, true, style: "width: 50px; float: left", class: "checkbox inline"%>
              <% else %>
                <%= check_box_tag "channels[]", channel.id, false, style: "width: 50px; float: left", class: "checkbox inline"%>
              <% end %>
            <%= channel.name %> 
            
            </td>
            </p>

          <% end %>  

      </div>
      <% end %>
      <!--Form for channels-->
      
      <!--Form for channels-->
      <% if @devices == nil %>
        <span>Ops, no device yet, please contact admin.</span>
        <br></br>
      <% else %>
      <div style="margin-bottom: 20px">
          <h4>Devices</h4>
          <% @devices.each do |device| %>  
            <p>
            <td>
              <% if @package_devices != nil && @package_devices.include?(device) %>
                <%= check_box_tag "devices[]", device.id, true, style: "width: 50px; float: left", class: "checkbox inline"%>
              <% else %>
                <%= check_box_tag "devices[]", device.id, false, style: "width: 50px; float: left", class: "checkbox inline"%>
              <% end %>
            <%= device.name %> 
            
            </td>
            </p>

          <% end %>  


      </div>
      <% end %>
      <!--Form for channels-->

      <!--Form for channels-->
      <% if @boxes == nil %>
        <span>Ops, no set top box yet, please contact admin.</span>
        <br></br>
      <% else %>
      <div style="margin-bottom: 20px">
          <h4>Set top boxes</h4>
          <% @boxes.each do |box| %>  
            <p>
            <td>
              <% if @package_boxes != nil && @package_boxes.include?(box) %>
                <%= check_box_tag "set_top_boxes[]", box.id, true, style: "width: 50px; float: left", class: "checkbox inline"%>
              <% else %>
                <%= check_box_tag "set_top_boxes[]", box.id, false, style: "width: 50px; float: left", class: "checkbox inline"%>
              <% end %>
            <%= box.name %> 
            
            </td>
            </p>

          <% end %>  

      </div>
      <% end %>
      <!--Form for channels-->
      <%= f.submit "Submit", class: "btn btn-primary" %>
      
    <% end %>
