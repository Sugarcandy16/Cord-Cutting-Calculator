    <%= form_for(@package) do |f| %>
      <%= render 'shared/error_messages', obj: @package %>

      <%= f.label :name %>
      <%= f.text_field :name, placeholder: 'Enter package name', autofocus: true, class: 'form-control'%>
      <%= f.label :cost %>
      <%= f.text_field :cost, placeholder: 'Enter package cost', class: 'form-control'%>
      <%= f.label :link %>
      <%= f.text_field :link, placeholder: 'Enter package link', class: 'form-control'%>
      <%= f.label :DVR, class: "checkbox inline" do %>
        <%= f.check_box :DVR,  class: "checkbox inline"%>
        <h5>DVR</h5>
      <% end %>

      <!--Form for channels-->
      <% if @channels == nil %>
        <span>Ops, no channel yet, please contact admin.</span>
        <br></br>
      <% else %>
      <!--<div style="margin-bottom: 20px">-->
          <h4>Channels</h4>
            <ul>
              <div class="wrapper">
                <div class="btn-group">
                  <button data-toggle="dropdown" class="btn btn-default dropdown-toggle"> Select the Channels <span class="caret"></span></button>
                    <ul style= "width: 250px !important; height: 225px; overflow-y: scroll;" class="dropdown-menu" role="listbox">
                      <% @channels.each do |channel| %>  
                        <% if @package_channels != nil && @package_channels.include?(channel) %>
                          <li><input type="text" id="box"><label for="box"><%= check_box_tag "channels[]", channel.id, true, style: "width: 50px; float: left"%><%= channel.name %></label></li>
                        <% else %>
                          <li><input type="text" id="box"><label for="box"><%= check_box_tag "channels[]", channel.id, false, style: "width: 50px; float: left"%><%= channel.name %></label></li>
                        <% end %>
                      <% end %>  
                    </ul>
                </div>
              </div>
            </ul>
      <!--</div>-->
      <% end %>
      <!--Form for channels-->
      
      
      <!--Form for devices-->
      <% if @devices == nil %>
        <span>Ops, no device yet, please contact admin.</span>
        <br></br>
      <% else %>
      <!--<div style="margin-bottom: 20px">-->
          <h4>Devices</h4>
            <ul>
              <div class="wrapper">
                <div class="btn-group">
                  <button data-toggle="dropdown" class="btn btn-default dropdown-toggle"> Select the Devices <span class="caret"></span></button>
                    <ul style= "width: 250px !important; height: 225px; overflow-y: scroll;" class="dropdown-menu" role="listbox">
                      <% @devices.each do |device| %>  
                        <% if @package_devices != nil && @package_devices.include?(device) %>
                          <li><input type="text" id="box"><label for="box"><%= check_box_tag "devices[]", device.id, true, style: "width: 50px; float: left"%><%= device.name %></label></li>
                        <% else %>
                          <li><input type="text" id="box"><label for="box"><%= check_box_tag "devices[]", device.id, false, style: "width: 50px; float: left"%><%= device.name %></label></li>
                        <% end %>
                      <% end %>  
                    </ul>
                </div>
              </div>
            </ul>
      <!--</div>-->
      <% end %>
      <!--Form for devices-->

      <!--Form for set top boxes-->
      <% if @boxes == nil %>
        <span>Ops, no set top box yet, please contact admin.</span>
        <br></br>
      <% else %>
      <!--<div style="margin-bottom: 20px">-->
          <h4>Set top boxes</h4>
            <ul>
              <div class="wrapper">
                <div class="btn-group">
                  <button data-toggle="dropdown" class="btn btn-default dropdown-toggle"> Select the Set Top Boxes <span class="caret"></span></button>
                    <ul style= "width: 250px !important; height: 225px; overflow-y: scroll;" class="dropdown-menu" role="listbox">
                      <% @boxes.each do |box| %>  
                        <% if @package_boxes != nil && @package_boxes.include?(box) %>
                          <li><input type="text" id="box"><label for="box"><%= check_box_tag "set_top_boxes[]", box.id, true, style: "width: 50px; float: left"%><%= box.name %></label></li>
                        <% else %>
                          <li><input type="text" id="box"><label for="box"><%= check_box_tag "set_top_boxes[]", box.id, false, style: "width: 50px; float: left"%><%= box.name %></label></li>
                        <% end %>
                      <% end %>  
                    </ul>
                </div>
              </div>
            </ul>
      <!--</div>-->
      <% end %>
      <!--Form for set top boxes-->
      
      <%= f.submit "Submit", class: "btn btn-primary" %>
      
    <% end %>