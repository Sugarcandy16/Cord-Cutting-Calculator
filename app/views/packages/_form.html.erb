    <%= form_for(@package) do |f| %>
      <%= render 'shared/error_messages', obj: @package %>

      <%= f.label :name %>
      <%= f.text_field :name, placeholder: 'Enter package name', autofocus: true, class: 'form-control'%>
      <%= f.label :cost %>
      <%= f.text_field :cost, placeholder: 'Enter package cost', class: 'form-control'%>
      <%= f.label :link %>
      <%= f.text_field :link, placeholder: 'Enter package link', class: 'form-control'%>
      <p>
        <h4>
          <%= label_tag do %>
            <%= check_box_tag :DVR, {style: "width: 20px"}%>
            DVR
          <% end %>
        </h4>
      </p>


      <!--Form for channels-->
      <% if @channels == nil %>
        <span>Ops, no channel yet, please contact admin.</span>
        <br></br>
      <% else %>
      <!--<div style="margin-bottom: 20px">-->
          <h4>Channels</h4>
            <ul>
              <div class="wrapper">
                <div class="btn-group">
                  <button style = "width: 250px;" data-toggle="dropdown" class="btn btn-default dropdown-toggle"> Select the Channels <span class="caret"></span></button>
                    <ul style= "width: 250px !important; height: 225px; overflow-y: scroll;" class="dropdown-menu" role="listbox">
                      <% @channels.each do |channel| %>  
                        <li>
                          <%= label_tag do %>
                            <%= check_box_tag "channel[]", channel.id, @package_channels.include?(channel) , {style: "width: 20px"}%>
                            <%= channel.name %>
                          <% end %>
                        </li>
                      <% end %>  
                    </ul>
                </div>
              </div>
            </ul>
      <!--</div>-->
      <% end %>
      <!--Form for channels-->
      
      
      <!--Form for devices-->
      <% if @devices == nil %>
        <span>Ops, no device yet, please contact admin.</span>
        <br></br>
      <% else %>
      <!--<div style="margin-bottom: 20px">-->
          <h4>Devices</h4>
            <ul>
              <div class="wrapper">
                <div class="btn-group">
                  <button style = "width: 250px;" data-toggle="dropdown" class="btn btn-default dropdown-toggle"> Select the Devices <span class="caret"></span></button>
                    <ul style= "width: 250px !important; height: 225px; overflow-y: scroll;" class="dropdown-menu" role="listbox">
                      <% @devices.each do |device| %>  
                        <li>
                          <%= label_tag do %>
                            <%= check_box_tag "devices[]", device.id, @package_devices.include?(device) , {style: "width: 20px"}%>
                            <%= device.name %>
                          <% end %>
                        </li>
                      <% end %>  
                    </ul>
                </div>
              </div>
            </ul>
      <!--</div>-->
      <% end %>
      <!--Form for devices-->

      <!--Form for set top boxes-->
      <% if @boxes == nil %>
        <span>Ops, no set top box yet, please contact admin.</span>
        <br></br>
      <% else %>
      <!--<div style="margin-bottom: 20px">-->
          <h4>Set top boxes</h4>
            <ul>
              <div class="wrapper">
                <div class="btn-group">
                  <button style = "width: 250px;" data-toggle="dropdown" class="btn btn-default dropdown-toggle"> Select the Set Top Boxes <span class="caret"></span></button>
                    <ul style= "width: 250px !important; height: 225px; overflow-y: scroll;" class="dropdown-menu" role="listbox">
                      <% @boxes.each do |box| %>  
                        <li>
                          <%= label_tag do %>
                            <%= check_box_tag "set_top_boxes[]", box.id, @package_boxes.include?(box) , {style: "width: 20px"}%>
                            <%= box.name %>
                          <% end %>
                        </li>

                      <% end %>  
                      
                    </ul>
                </div>
              </div>
            </ul>
      <!--</div>-->
      <% end %>
      <!--Form for set top boxes-->
      
      <%= f.submit "Submit", class: "btn btn-primary" %>
      
    <% end %>
