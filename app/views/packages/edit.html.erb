<% provide(:title, 'Edit Package') %>
<h1 class="title">Edit package</h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for(@package) do |f| %>
      <%= render 'shared/error_messages', obj: @package %>

      <%= f.label :name %>
      <%= f.text_field :name, placeholder: 'Enter package name', autofocus: true, class: 'form-control'%>

      <%= f.submit "Update package information", class: "btn btn-primary" %>
    <% end %>
    <br>
    <p><%= link_to 'Cancel and return to package information', @package %></p>
  </div>
</div>
