<html>
      
    <head>
      <script>
function myFunction1() {
  document.getElementById("myDropdown1").classList.toggle("show");
}
function filterFunction1() {
  var input, filter, ul, li, a, i;
  input = document.getElementById("myInput1");
  filter = input.value.toUpperCase();
  div = document.getElementById("myDropdown1");
  li = div.getElementsByTagName("li");
  for (i = 0; i < li.length; i++) {
    txtValue = li[i].textContent || li[i].innerText;
    if (txtValue.toUpperCase().indexOf(filter) > -1) {
      li[i].style.display = "";
    } else {
      li[i].style.display = "none";
    }
  }
}
      </script>
</head>  

<body>
</br> </br>
<% provide(:title, 'Approve Channels') %>
<% if @channels == nil %>
    <h3 class="title">No Channels to Approve</h3>
<br></br>
<% else %>
    <h3 class="title">Approve below channels</h3>

    <div class="col-md-6 col-md-offset-3">
        <%= form_for(:approve_channels, url: '/channels/approve', method: 'POST') do |f| %>
            <div class="wrapper dropdown-area">
                <div class="btn-group">
                    <button style = "width: 250px;" data-toggle="dropdown" class="btn btn-default dropdown-toggle"> Select the Channels <span class="caret"></span></button>
                    <ul id="myDropdown1" style= "width: 250px !important; height: 225px; overflow-y: scroll;" class="dropdown-menu" role="listbox">
                        <input type="text" placeholder="Search.." id="myInput1" onkeyup="filterFunction1()" class="search">
                        <% @channels.each do |channel| %>  
                        <li class="dropdown-list">
                            <%= label_tag do %>
                            <%= check_box_tag "channels[]", channel, true, class: "multi-checkbox"%>
                            <%= channel %>
                            <% end %>
                        </li>
                        <% end %>  
                    </ul>
                </div>
            </div>

            <%= f.submit "Approve", class: "btn btn-primary" %>
        <% end %>
    </div>
<% end %>

</body>
</html>