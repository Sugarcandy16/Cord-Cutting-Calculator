<% provide(:title, 'Login') %>
<h1 class="title">Login</h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for(:session, url: login_path) do |f| %>

      <%= f.label :email %>
      <%= f.email_field :email, placeholder: 'Enter email', autofocus: true, class: 'form-control'%>

      <%= f.label :password %>
      <%= f.password_field :password , placeholder: 'Enter password', class: 'form-control'%>

      <%= f.label :remember_me do %>
      <%= f.check_box :remember_me, class: "multi-checkbox" %>
        <span>Remember me on this computer</span>
      <% end %>

      <%= f.submit "Login", class: "btn btn-primary" %>
    <% end %>
    <br>
    <p>New cord cutter? <%= link_to "Sign up now!", signup_path %></p>
  </div>
</div>
