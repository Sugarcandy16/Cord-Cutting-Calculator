    <%= form_for(@set_top_box) do |f| %>
      <%= render 'shared/error_messages', obj: @set_top_box %>

      <%= f.label :name %>
      <%= f.text_field :name, placeholder: 'Enter box name', autofocus: true, class: 'form-control'%>

      <%= f.label :description %>
      <%= f.text_field :description, placeholder: 'Enter description', class: 'form-control'%>

      <%= f.submit "Submit", class: "btn btn-primary" %>
    <% end %>
