    <%= form_for(@device) do |f| %>
      <%= render 'shared/error_messages', obj: @device %>

      <%= f.label :name %>
      <%= f.text_field :name, placeholder: 'Enter device name', autofocus: true, class: 'form-control'%>

      <%= f.label :description %>
      <%= f.text_field :description, placeholder: 'Enter description', class: 'form-control'%>
      
      <%= f.submit "Submit", class: "btn btn-primary" %>
    <% end %>
